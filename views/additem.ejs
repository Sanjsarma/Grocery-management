                <div class="panel-body" >
                    <form class="form-horizontal" role="form" method="post" action="/insert" enctype="multipart/form-data">
                       <% if (message.length > 0) { %>
                            <div class="alert alert-success col-sm-12"><%= message %></div>
                        <% } %>
                        <div id="signupalert" style="display:none" class="alert alert-danger">
                            <p>Error:</p>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <div style="text-align: left; padding-left: 100px;">
                            <label for="itemname" class="col-md-3 control-label" >Item</label>
                        </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="itemname" placeholder="Item">
                            </div>
                           
                        </div>
                        <div class="form-group">
                            <div style="text-align: left; padding-left: 100px;">
                            <label for="price" class="col-md-3 control-label">Price</label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="price" placeholder="Price">
                            </div>
                        </div>
                        <div class="form-group">
                            <div style="text-align: left; padding-left: 100px;">
                            <label for="quantity" class="col-md-3 control-label">Quantity</label>
                            </div>
                            <div class="col-md-9">
                                <input type="number" class="form-control" name="quantity" placeholder="Quantity">
                            </div>
                        </div>
                        <div class="form-group">
                            <div style="text-align: left; padding-left: 100px;">
                            <label for="uploaded_image" class="col-md-3 control-label">Image</label>
                            </div>
                            <div class="col-sm-9">
                                <input class="form-control" type="file" name="uploaded_image"/>
                            </div>
                        </div>                                
                        <div class="form-group">
                            <!-- Button -->                                       
                            <div class="col-md-offset-3 col-md-9">
                                <button id="btn-signup" type="submit" class="btn btn-info" style="text-align:center; font-weight: bold; padding-right: 18px;" ><i class="icon-hand-right" ></i> &nbsp Insert</button>
