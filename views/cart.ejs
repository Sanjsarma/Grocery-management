<!DOCTYPE html> 
<head>
    <title>Cart</title>
</head>
<body>
<div class="container-fluid"   >
    <div class="table-data" style="padding: 50px 300px 50px 0px;" align="center" >
        <font size="3" face="times new roman"  style=" font-weight: lighter;"  >
        <h2 style="font-weight: bold;">Items</h2>
        
            <table class="table table-dark" border="1" >
                <thead>
                <tr>
                    <th>Sl.no</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>

           
                
                <%
                if(productData.length!=0){
                var i=1;
                productData.forEach(function(data){
                {
                %>
                <tr>
                    <td><%=i%></td>
                    <td><%=data.i_name %></td>
                    <td><%=data.price %></td>
                    <td><%=data.quantity %></td>
                </tr>
                <%  i++; } }) %>
                <% } else{ %>
                    <tr>
                        <td colspan="7">No Data Found</td>
                    </tr>
                <% } %>
            </tbody>
            </table>
            <form action="/bill" method="POST">
            <button type="submit">Generate bill</button>
            </form>
        
            </div>
        </div>
    </body>
</html>      
